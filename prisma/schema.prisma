datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id            String    @id @default(uuid())
    email         String    @unique
    username      String
    password      String
    phone_number  Int?
    address       String?
    verified      Boolean   @default(false)
    otp           String?
    otpExpiration DateTime?
}

model Pet {
    id              String         @id @default(uuid())
    name            String
    breed           String
    age             Int
    gender          String
    color           String?
    healthCondition String?
    vaccination     Boolean
    adoptionStatus  AdoptionStatus
    type            String
    images          String[]
    personality     Personality?
    adoptionInfo    AdoptionInfo?
    createdAt       DateTime       @default(now())
    updatedAt       DateTime       @updatedAt
}

model Personality {
    id               String        @id @default(uuid())
    energyLevel      EnergyLevel
    temperament      Temperament
    training         TrainingLevel
    strangerBehavior String?
    petBehavior      String?
    specialTraits    String?
    pet              Pet           @relation(fields: [petId], references: [id], onDelete: Cascade)
    petId            String        @unique
}

model AdoptionInfo {
    id              String          @id @default(uuid())
    idealHome       String?
    children        Boolean
    otherPets       Boolean
    experienceLevel ExperienceLevel
    specialNeeds    String?
    pet             Pet             @relation(fields: [petId], references: [id], onDelete: Cascade)
    petId           String          @unique
}

enum AdoptionStatus {
    Available
    Adopted
}

enum EnergyLevel {
    High
    Medium
    Low
}

enum Temperament {
    Friendly
    Shy
    Aggressive
    Calm
    Playful
}

enum TrainingLevel {
    None
    Basic
    Advanced
}

enum ExperienceLevel {
    FirstTimeOwner
    ExperiencedOwner
    Both
}

model Admin {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
